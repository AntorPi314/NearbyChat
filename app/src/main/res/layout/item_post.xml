<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="4dp"
        android:clipToOutline="true"
        android:backgroundTintMode="src_in"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FFFFFF"
        android:translationZ="2dp"
        android:radius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/profilePicRound"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/profile_pic_round_vector"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_pic_round_vector" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USERID"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:31 PM | 03-09-2025 | 1C"
                    android:textColor="#999999"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:linksClickable="true"
            android:text="Hi everyone,\nThis my post."
            android:textColor="#111111"
            android:textColorLink="#1565C0"
            android:textSize="15sp"
            android:lineSpacingExtra="3dp"
            android:background="@drawable/bubble_left"
            android:padding="10dp"
            android:backgroundTint="#FAFAFA"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

    </LinearLayout>
</LinearLayout>
