<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16dp"
    android:background="@drawable/dialog_background"
    android:elevation="8dp"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingStart="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:id="@+id/qrCodeShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/qr_code"
                android:tint="#424449" />

        </LinearLayout>

        <TextView
            android:id="@+id/dia_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Create New Group"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profilePicRound"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle_bg"
            android:contentDescription="Profile Picture"
            android:padding="4dp"
            android:src="@drawable/profile_pic_round_vector" />

        <TextView
            android:id="@+id/groupID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="GROUP_ID"
            android:textColor="#7A6F6F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:text="Group Name"
            android:textColor="#0A5EDE"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_bg"
            android:hint="Group Name"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#000000"
            android:textColorHint="#857C7C"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Encryption Key"
            android:textColor="#0A5EDE"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editEncryptionKey"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="@drawable/edittext_bg"
            android:hint="Encryption Key"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#000000"
            android:textColorHint="#857C7C"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#C30E0E"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:text="Cancel"
                android:backgroundTint="#5A595B"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:text="Create"
                android:backgroundTint="#5A595B"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>