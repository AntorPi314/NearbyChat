<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16dp"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingTop="12dp"
        android:paddingEnd="22dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/profilePicRound"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/circle_bg"
            android:contentDescription="Profile Picture"
            android:padding="0dp"
            android:src="@drawable/profile_pic_round_vector" />

        <TextView
            android:id="@+id/textID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR_ID/Name"
            android:textColor="#7A6F6F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‡µðŸ‡¸  Free Palestine"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/id_notepad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_bg_round"
            android:drawableStart="@drawable/ic_notepad"
            android:drawablePadding="12dp"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="Notepad"
            android:textAllCaps="false"
            android:textColor="#EFE7E7" />

        <Button
            android:id="@+id/id_settings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_bg_round"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="9dp"
            android:drawableTint="#FFFFFF"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="#EFE7E7" />

        <Button
            android:id="@+id/id_support_dev"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_bg_round"
            android:drawableStart="@drawable/ic_support_dev"
            android:drawablePadding="9dp"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="Support Developer"
            android:textAllCaps="false"
            android:textColor="#EFE7E7" />

        <Button
            android:id="@+id/id_about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_bg_round"
            android:drawableStart="@drawable/ic_about"
            android:drawablePadding="9dp"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="About"
            android:textAllCaps="false"
            android:textColor="#EFE7E7" />

        <Button
            android:id="@+id/id_restart_app"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_bg_round"
            android:drawableStart="@drawable/ic_restart"
            android:drawablePadding="9dp"
            android:gravity="center|start"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="Restart App"
            android:textAllCaps="false"
            android:textColor="#EFE7E7" />

    </LinearLayout>
</androidx.cardview.widget.CardView>