<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2937"
    tools:context=".QRCodeActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBarQR"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#27272A"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBackQR"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#A8A29E"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <!-- Share Icon -->
        <ImageView
            android:id="@+id/btnShareQR"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_share"
            android:tint="#E7E5E4"
            android:contentDescription="Share QR Code"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <!-- Title -->
        <TextView
            android:id="@+id/qrTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:text="QR Code"
            android:textColor="#E7E5E4"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- QR Code Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBarQR"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- QR Code Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="328dp"
            android:layout_height="327dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:id="@+id/qrCodeImageNew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:contentDescription="QR Code"
                android:scaleType="fitCenter"/>

        </androidx.cardview.widget.CardView>

        <!-- Info Text -->
        <TextView
            android:id="@+id/qrInfoTextNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Scan this QR code to add"
            android:textColor="#E7E5E4"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnCloseNew"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#27272A"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:text="Close"
            android:textColor="#E7E5E4"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>